{
    "manifest_version": 2,
    "name": "CloudApp",
    "version": "0.1",
    "author": "Michael Orr",
    "description": "An extension for uploading items to CloudApp",
    "icons": {},
    "update_url": "http://github.com/michaelorr/chromacloud/updates.xml?raw=true",

    "browser_action": {
        "default_title": "Save this page to CloudApp",
        "default_icon": {
            "19": "images/iconBlueLine19.png",
            "38": "images/iconBlueLine38.png"
        }
    },

    "background": {
        "scripts": [ "extension.js" ],
        "persistent": true
    },

    "permissions": [
        "http://my.cl.ly/*",
        "webRequest",
        "webRequestBlocking",
        "clipboardWrite",
        "activeTab"
    ]
}

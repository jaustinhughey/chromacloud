{
    "manifest_version": 2,
    "name": "ChromaCloud",
    "short_name": "ChromaCloud",
    "version": "0.5.1",
    "author": "Michael Orr",
    "description": "An extension for uploading items to CloudApp",
    "icons": { "16": "images/iconBlueUp16.png",
               "48": "images/iconBlueUp48.png",
               "128": "images/iconBlueUp128.png" },

    "browser_action": {
        "default_title": "Save this page to CloudApp",
        "default_icon": {
            "19": "images/iconBlueLine19.png",
            "38": "images/iconBlueLine38.png"
        }
    },

    "background": {
        "scripts": [ "extension.js" ],
        "persistent": true
    },

    "options_page": "options.html",

    "permissions": [
        "http://my.cl.ly/*",
        "webRequest",
        "webRequestBlocking",
        "clipboardWrite",
        "notifications",
        "tabs",
        "activeTab"
    ]
}
